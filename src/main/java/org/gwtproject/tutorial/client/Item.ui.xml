<?xml version="1.0" encoding="UTF-8"?>

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:p='urn:import:com.vaadin.polymer.paper.widget'
	xmlns:i='urn:import:com.vaadin.polymer.iron.widget'>

	<ui:style>
	@external .done;
	.item {
		font-size: 150%;
		font-weight: normal;
	}
	
	.item .done {
		text-decoration: line-through;
	}
	
	.title {
		font-size: 150%;
		font-weight: normal;
	}
	
	.description {
		margin-top: 15px;
		padding-left: 40px;
	}
	
	.itemDrawer {
		padding: 40px;
	}
	</ui:style>

	<g:HTMLPanel addStyleNames="vertical center-justified layout {style.item}">
		<p:PaperMaterial addStyleNames="{style.itemDrawer}">
			<h4>
				<p:PaperCheckbox ui:field="done"></p:PaperCheckbox>
				<span ui:field="title" class='{style.title}'></span>
			</h4>
			<div ui:field="description" class='{style.description}'></div>
		</p:PaperMaterial>
	</g:HTMLPanel>

</ui:UiBinder>